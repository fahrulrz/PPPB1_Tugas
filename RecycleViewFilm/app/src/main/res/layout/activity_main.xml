<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/navbar"
                layout="@layout/navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/wdyw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you want to do now, User ?"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/navbar"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_movie"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="11dp"
                app:icon="@drawable/material_symbols_movie"
                app:iconTint="@color/red"
                app:cornerRadius="25dp"
                app:layout_constraintTop_toBottomOf="@id/wdyw"
                app:layout_constraintStart_toStartOf="@id/wdyw"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_food"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="11dp"
                app:icon="@drawable/mdi_food"
                app:iconTint="@color/green_bold"
                app:cornerRadius="25dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/wdyw"
                app:layout_constraintLeft_toRightOf="@id/btn_movie"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cinema"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="11dp"
                app:icon="@drawable/mdi_cinema"
                app:iconTint="@color/brown"
                app:cornerRadius="25dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/wdyw"
                app:layout_constraintLeft_toRightOf="@id/btn_food"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fluent"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="11dp"
                app:icon="@drawable/fluent_couch_12_filled"
                app:iconTint="@color/brown"
                app:cornerRadius="25dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/wdyw"
                app:layout_constraintLeft_toRightOf="@id/btn_cinema"
                />

            <TextView
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btn_movie"
                app:layout_constraintStart_toStartOf="@id/btn_movie"
                app:layout_constraintEnd_toEndOf="@id/btn_movie"
                />

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btn_food"
                app:layout_constraintStart_toStartOf="@id/btn_food"
                app:layout_constraintEnd_toEndOf="@id/btn_food"
                />

            <TextView
                android:id="@+id/cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinema"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btn_cinema"
                app:layout_constraintStart_toStartOf="@id/btn_cinema"
                app:layout_constraintEnd_toEndOf="@id/btn_cinema"
                />

            <TextView
                android:id="@+id/private_booking"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Private Booking"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/btn_fluent"
                app:layout_constraintStart_toStartOf="@id/btn_fluent"
                app:layout_constraintEnd_toEndOf="@id/btn_fluent"
                />

            <TextView
                android:id="@+id/hot_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUR HOTTEST MOVIE"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/private_booking"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see more"
                android:textColor="@color/green_bold"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/hot_movie"
                app:layout_constraintBottom_toBottomOf="@id/hot_movie"
                app:layout_constraintRight_toLeftOf="@id/arrow"
                android:layout_marginEnd="6dp"
                />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@id/see_more"
                app:layout_constraintBottom_toBottomOf="@id/see_more"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/arrow"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/card_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/film_card"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hot_movie"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>