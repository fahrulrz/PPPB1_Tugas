<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Shadow -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#22000000"/> <!-- Ubah warna sesuai kebutuhan -->
        <corners android:radius="8dp"/> <!-- Ubah radius sesuai kebutuhan -->
    </shape>
</item>

<!-- Background -->
<item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/input"/> <!-- Warna latar belakang -->
        <corners android:radius="8dp"/> <!-- Radius sudut -->
    </shape>
</item>
</layer-list>
