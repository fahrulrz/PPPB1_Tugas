<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/quixk_action"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="windah tol cipularang"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:letterSpacing=".02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/short_info"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="BNI Taplus Muda | 7263-2938-2390-****"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Rp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/short_info"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*********"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/rp"
        app:layout_constraintTop_toBottomOf="@id/short_info"/>

    <ImageView
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fi_rs_eye_crossed_1"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/value"
        app:layout_constraintBottom_toBottomOf="@id/rp"
        app:layout_constraintTop_toTopOf="@id/rp"/>

    <ImageView
        android:id="@+id/copy"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/fi_rr_copy_1"
        app:layout_constraintRight_toLeftOf="@id/gd1"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowdown2"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/short_info"
        app:layout_constraintTop_toTopOf="@id/short_info"
        app:layout_constraintBottom_toBottomOf="@id/short_info"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tarik_tunai"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="12sp"
        android:background="@drawable/quixk_action"
        android:textAllCaps="false"
        android:text="Tarik Tunai"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setor_tunai"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:paddingStart="15dp"
        android:textAllCaps="false"
        android:paddingEnd="15dp"
        android:layout_marginStart="10dp"
        android:text="Setor Tunai"
        android:background="@drawable/quixk_action"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/tarik_tunai"
        app:layout_constraintTop_toTopOf="@id/tarik_tunai"
        app:layout_constraintBottom_toBottomOf="@id/tarik_tunai"
        />


</androidx.constraintlayout.widget.ConstraintLayout>